load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("//bzlformat:defs.bzl", "bzlformat_pkg")

bzlformat_pkg(name = "bzlformat")

filegroup(
    name = "all_files",
    srcs = glob(["*"]),
    visibility = ["//:__subpackages__"],
)

exports_files([
    "package.json",
    "yarn.lock",
])

bzl_library(
    name = "markdown_check_links_test",
    srcs = ["markdown_check_links_test.bzl"],
    visibility = ["//markdown:__subpackages__"],
    deps = [
        "//bzllib:defs",
        "@bazel_skylib//lib:shell",
    ],
)

bzl_library(
    name = "markdown_register_node_deps",
    srcs = ["markdown_register_node_deps.bzl"],
    visibility = ["//markdown:__subpackages__"],
    deps = [
        "@build_bazel_rules_nodejs//:bzl",
    ],
)

bzl_library(
    name = "markdown_generate_toc",
    srcs = ["markdown_generate_toc.bzl"],
    visibility = ["//markdown:__subpackages__"],
    deps = [
        "//updatesrc:defs",
    ],
)

bzl_library(
    name = "markdown_pkg",
    srcs = ["markdown_pkg.bzl"],
    visibility = ["//markdown:__subpackages__"],
    deps = [
        ":markdown_generate_toc",
        "//bzllib:defs",
        "//updatesrc:defs",
        "@bazel_skylib//rules:diff_test",
    ],
)
